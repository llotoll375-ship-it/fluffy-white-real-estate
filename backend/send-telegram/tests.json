{
  "tests": [
    {
      "name": "Handle OPTIONS request for CORS",
      "method": "OPTIONS",
      "path": "/",
      "expectedStatus": 200,
      "expectedHeaders": {
        "Access-Control-Allow-Origin": "*"
      }
    },
    {
      "name": "Reject request without recaptcha token",
      "method": "POST",
      "path": "/",
      "body": {
        "name": "Иван Иванов",
        "phone": "+7 (999) 123-45-67",
        "message": "Хочу узнать подробности о квартирах"
      },
      "expectedStatus": 400,
      "expectedBody": {
        "error": "reCAPTCHA token is required"
      },
      "bodyMatcher": "partial"
    },
    {
      "name": "Reject request with invalid recaptcha token",
      "method": "POST",
      "path": "/",
      "body": {
        "name": "Петр Петров",
        "phone": "+7 (911) 555-55-55",
        "recaptchaToken": "invalid-token-123"
      },
      "expectedStatus": 400,
      "expectedBody": {
        "error": "reCAPTCHA verification failed"
      },
      "bodyMatcher": "partial"
    }
  ]
}