{
  "tests": [
    {
      "name": "Handle OPTIONS request for CORS",
      "method": "OPTIONS",
      "path": "/",
      "expectedStatus": 200,
      "expectedHeaders": {
        "Access-Control-Allow-Origin": "*"
      }
    },
    {
      "name": "Reject request without captcha token",
      "method": "POST",
      "path": "/",
      "body": {
        "name": "Иван Иванов",
        "phone": "+7 (999) 123-45-67",
        "message": "Хочу узнать подробнее"
      },
      "expectedStatus": 400,
      "expectedBody": {
        "error": "Captcha validation required"
      },
      "bodyMatcher": "partial"
    },
    {
      "name": "Send telegram message with valid captcha",
      "method": "POST",
      "path": "/",
      "body": {
        "name": "Петр Петров",
        "phone": "+7 (911) 555-55-55",
        "message": "Интересует 2-комнатная",
        "recaptchaToken": "simple-captcha-passed"
      },
      "expectedStatus": 200,
      "expectedBody": {
        "success": true
      },
      "bodyMatcher": "partial"
    }
  ]
}